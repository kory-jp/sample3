<h1>記事一覧</h1>
<div>
  <%= link_to '新規記事', new_article_path %>
</div>

<% if flash[:notice] %>
  <div>
    <%= flash[:notice] %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article|%>
    <tr>
      <th><%= article.id %></th>
      <td><%= article.title %></td>
      <td><%= article.name %></td>
      <td><%= article.created_at.to_s(:datetime_jp) %></td>
      <td><%= article.updated_at.to_s(:datetime_jp) %></td>
      <td><%= link_to '詳細', article %></td>
      <td><%= link_to '削除', article, method: :delete %></td>
    </tr>
  <% end %>
</tbody>
</table>

<%= paginate @articles %>